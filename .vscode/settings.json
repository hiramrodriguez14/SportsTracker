{
    "python.defaultInterpreterPath": "${workspaceFolder}/venv/Scripts/python.exe",
    "terminal.integrated.env.windows": {
        "PYTHONPATH": "${workspaceFolder}/venv"
    },
    "terminal.integrated.profiles.windows": {
        "PowerShell": {
            "path": "C:\\Windows\\System32\\WindowsPowerShell\\v1.0\\powershell.exe",
            "args": ["-ExecutionPolicy", "Bypass", "-NoExit", "-Command", "& { & '${workspaceFolder}/venv/Scripts/Activate.ps1' }"]
        },
        "Command Prompt": {
            "path": "C:\\Windows\\System32\\cmd.exe",
            "args": ["/k", "\"${workspaceFolder}\\venv\\Scripts\\activate.bat\""]
        }
    },
    "terminal.integrated.profiles.linux": {
        "bash": {
            "path": "/bin/bash",
            "args": ["--rcfile", "<(echo 'source ${workspaceFolder}/venv/bin/activate')"]
        }
    },
    "terminal.integrated.profiles.osx": {
        "zsh": {
            "path": "/bin/zsh",
            "args": ["--rcfile", "<(echo 'source ${workspaceFolder}/venv/bin/activate')"]
        }
    },
    "terminal.integrated.defaultProfile.windows": "PowerShell",
    "terminal.integrated.defaultProfile.linux": "bash",
    "terminal.integrated.defaultProfile.osx": "zsh"
}
